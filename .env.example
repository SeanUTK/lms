# TMS Pro - Environment Variables Example
# Copy this file to .env and fill in your actual values

# Supabase Configuration
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key
VITE_SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-for-admin-functions

# Mapbox Configuration
VITE_MAPBOX_ACCESS_TOKEN=your-mapbox-access-token
VITE_MAPBOX_STYLE=mapbox://styles/mapbox/light-v11

# Application Configuration
VITE_APP_NAME=TMS Pro
VITE_APP_URL=http://localhost:3000
VITE_API_URL=http://localhost:8000/api

# Feature Flags
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_REAL_TIME_UPDATES=true

# Third-party Integrations
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key-as-fallback
VITE_WEATHER_API_KEY=your-weather-api-key
VITE_ELD_INTEGRATION_KEY=your-eld-integration-key

# Analytics and Monitoring
VITE_ANALYTICS_ID=your-analytics-id
VITE_SENTRY_DSN=your-sentry-dsn

# Development Settings
VITE_DEV_MOCK_DATA=true
VITE_DEV_DISABLE_AUTH=false
